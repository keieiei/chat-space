.menu
  .menu_user_info
    .menu_user_info_user
      %p.name
        =current_user.name
      %ul.menu_user_info_user_box_menu
        / = link_to "サインアウト", destroy_user_session_path, method: :delete
        %li.menu_user_info_user_box_menu_edit-group
          = link_to new_group_path do
            = fa_icon 'pencil-square-o', class: 'fa'
        %li.menu_user_info_user_box_menu_edit-user
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'fa'
  .menu_groups_info
    - current_user.groups.each do |group|
      .menu_groups_info_group_info
        = link_to group_messages_path(group) do
          .menu_groups_info_name
            = group.name
          .menu_groups_info_message
            = group.show_last_message
